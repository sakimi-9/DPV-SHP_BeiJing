# 多阶段构建：第一阶段 - 使用 Bun 构建项目
FROM registry.cn-hangzhou.aliyuncs.com/library/alpine:latest as bun-installer

# 安装 bun
RUN apk add --no-cache curl bash && \
    curl -fsSL https://bun.sh/install | bash

# 设置 PATH
ENV PATH="/root/.bun/bin:$PATH"

# 设置工作目录
WORKDIR /app

# 复制 package.json 和 bun.lock
COPY package.json bun.lock ./

# 安装依赖
RUN bun install --frozen-lockfile

# 复制源代码
COPY . .

# 构建项目
RUN bun run build

# 第二阶段 - 使用 Nginx 提供静态文件服务
FROM registry.cn-hangzhou.aliyuncs.com/library/nginx:alpine

# 复制自定义 nginx 配置
COPY nginx.conf /etc/nginx/nginx.conf

# 从构建阶段复制构建产物到 nginx 静态文件目录
COPY --from=bun-installer /app/dist /usr/share/nginx/html

# 复制数据文件（如果需要）
COPY --from=bun-installer /app/public/*.json /usr/share/nginx/html/
COPY --from=bun-installer /app/public/*.csv /usr/share/nginx/html/

# 暴露端口
EXPOSE 80

# 健康检查
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:80/ || exit 1

# 启动 nginx
CMD ["nginx", "-g", "daemon off;"]
